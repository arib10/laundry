<%- include('../partials/header.ejs') %>
<div>
    <h1><%= customer.fullname %> Profile</h1>
    <p>Email: <%= customer.email %></p>
    <p>Phone Number: <%= customer.phone %></p>
    <p>Address: <%= customer.address %></p>
    <h2>Customer washes</h2>
    <% customer.washes.forEach( wash => { %>
        <p>Registered By: <%= wash.staff %></p>
        <p>wash Description: <%= wash.description %></p>
        <p>wash Types: <%= wash.wash_types.join(", ") %></p>
        <p>Wash Date: <%= wash.date_of_wash.toDateString() %></p>
        <% if (wash.payment.status === "not-paid") { %>
            <p><a href="/customers/<%= customer._id %>/washes/<%= wash._id %>/payment/new">Make Payment</a></p>
        <% } %>
        <p></p>
        <hr>
    <% }) %>
    <div>
    </div>
    <a href="/customers/<%= customer._id %>/washes/new">Add new wash</a>
</div>
<%- include('../partials/footer.ejs') %>